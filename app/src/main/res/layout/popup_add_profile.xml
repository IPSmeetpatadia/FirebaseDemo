<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/popup_profile_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baseline_image_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--    NAME    -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addList_TIL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/dark_cyan"
        app:boxBackgroundColor="@color/blur2_robin_egg_blue"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_img"
        app:startIconDrawable="@drawable/baseline_person_4_24"
        app:startIconTint="@color/dark_cyan">

        <EditText
            android:id="@+id/profile_edtxt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Person Name"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--    EMAIL    -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addList_TIL2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/dark_cyan"
        app:boxBackgroundColor="@color/blur2_robin_egg_blue"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addList_TIL1"
        app:startIconDrawable="@drawable/baseline_mail_outline_24"
        app:startIconTint="@color/dark_cyan">

        <EditText
            android:id="@+id/profile_edtxt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--    CONTACT / PHONE NUMBER    -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addList_TIL3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/dark_cyan"
        app:boxBackgroundColor="@color/blur2_robin_egg_blue"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addList_TIL2"
        app:startIconDrawable="@drawable/baseline_phone_24"
        app:startIconTint="@color/dark_cyan">

        <EditText
            android:id="@+id/profile_edtxt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--   ADDRESS    -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addList_TIL4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/dark_cyan"
        app:boxBackgroundColor="@color/blur2_robin_egg_blue"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addList_TIL3"
        app:startIconDrawable="@drawable/baseline_location_on_24"
        app:startIconTint="@color/dark_cyan">

        <EditText
            android:id="@+id/profile_edtxt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--  SAVE  -->
    <Button
        android:id="@+id/btnSaveProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Save"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addList_TIL4" />

    <!--  CANCEL  -->
    <Button
        android:id="@+id/btnProfileCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSaveProfile" />

</androidx.constraintlayout.widget.ConstraintLayout>